datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Remove the User model - Supabase handles this!
// Supabase has built-in auth.users table

// Theater Model (NO CHANGES)
model Theater {
  id           Int       @id @default(autoincrement())
  name         String
  totalSeats   Int       @default(100)
  rows         Int       @default(10)
  seatsPerRow  Int       @default(10)
  seats        Json      @default("[[\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\"],[\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\"],[\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\"],[\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\"],[\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\"],[\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\"],[\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\"],[\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\"],[\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\"],[\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\",\"available\"]]")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  bookings     Booking[]
}

// Booking Model - Link to Supabase auth.users
model Booking {
  id             Int      @id @default(autoincrement())
  bookingId      String   @unique @default(cuid())
  userId         String   // ‚Üê Changed to String (Supabase user UUID)
  theaterId      Int
  numberOfSeats  Int
  seatNumbers    Json
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  theater        Theater  @relation(fields: [theaterId], references: [id], onDelete: Cascade)
}